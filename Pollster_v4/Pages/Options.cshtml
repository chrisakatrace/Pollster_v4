@page
@model Pollster_v4.Pages.OptionsModel

@{
    ViewData["Title"] = "Options";
}

<h2>Options</h2>

<h4>Options</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Options.QuestionId" class="control-label"></label>
                <input asp-for="Options.QuestionId" class="form-control" value="@Model.QuestionsId"/>
                <span asp-validation-for="Options.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Options.Option" class="control-label"></label>
                <input asp-for="Options.Option" class="form-control" />
                <span asp-validation-for="Options.Option" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
